{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "com.homework.dev",
  "productName": "homework",
  "version": "0.1.0",
  "build": {
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "homework",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "aarch64-unknown-linux-gnu",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "copyright": "Copyright (c) 2023",
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {},
      "packageType": ["deb", "appimage"]
    }
  }
}
